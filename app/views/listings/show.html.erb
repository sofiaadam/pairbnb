<button type="button" class="btn btn-default">
<%= link_to "Back to all listings", listings_path %>
</button>

<h1><%="#{@listing.property_type} in #{@listing.address}"%></h1>

<div class="row">
  <div class="col-md-12">
    <div class="carousel slide" id="myCarousel">
      <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <% if @listing.images[0].fill.url %>
        <!-- Indicators -->
          <% @listing.images.each do |a| %>
        <ol class="carousel-indicators">
          <li data-target="#myCarousel" data-slide-to="<%= a %>"></li>
        </ol>

        <% end %>
        <% end %>
        <!-- Wrapper for slides -->
        <div class="carousel-inner">
          <% if @listing.images[0].fill.url %>
          <% @listing.images.each do |image| %>
          <div class="item <%= 'active' if image == @listing.images[0] %>">
            <%= image_tag image.fill.url %>
          </div>
          <% end %>
          <% end %>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

<p><%="#{@listing.property_type} in #{@listing.address}"%></p>
<p><%= "Price :#{@listing.price}" %></p>
<p><%= @listing.description %></p>
<%= button_tag "Book now!", data: { disable_with: "Please wait..." } %><br>






<%@listing.tags.each do |t|%>
<button type="button" class="btn btn-default">
<%=link_to "#{t.desc_tag}", tag_path(t.id)%>
</button>
<%end%>

<h1>Show specific listing</h1>
<button type="button" class="btn btn-default">
<%= link_to "Edit Listing", edit_listing_path%>
</button>

<button type="button" class="btn btn-default">
<%= link_to "Delete Listing", listing_path(@listing),data: {:confirm => "Are you sure?"}, :method => :delete %>
</button>
